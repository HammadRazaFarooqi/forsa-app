rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserRole() == role;
    }
    
    function hasAnyRole(roles) {
      return isAuthenticated() && getUserRole() in roles;
    }
    
    // Admin check function
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Allow reading own profile when authenticated
      allow read: if isAuthenticated();
      // Allow list/query operations for email lookup during login (unauthenticated)
      // This is necessary to find user by email and get their phone for Firebase Auth
      allow list: if true; // Allow queries for email lookup (login flow)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Update: Owner can update their own profile, admin can update any user (for moderation)
      // Special rule: checkInCode can only be set once (if currently null) by owner
      allow update: if isOwner(userId) && (
        // Owner can update their own profile
        (resource.data.checkInCode == null || 
         request.resource.data.checkInCode == resource.data.checkInCode) ||
        // Owner can set checkInCode only if it's currently null
        (resource.data.checkInCode == null && 
         request.resource.data.checkInCode != null &&
         'checkInCodeCreatedAt' in request.resource.data)
      ) || isAdmin(); // Admin can update any user
      allow delete: if false; // Users cannot be deleted
    }
    
    // Role-specific collections
    match /players/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }
    
    match /parents/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }
    
    match /academies/{academyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(academyId) || isAdmin();
      allow delete: if false;
    }
    
    match /clinics/{clinicId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(clinicId) || isAdmin();
      allow delete: if false;
    }
    
    match /agents/{agentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(agentId) || isAdmin();
      allow delete: if false;
    }
    
    // User profiles
    match /userProfiles/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false;
    }
    
    // Services (for clinics)
    match /services/{serviceId} {
      allow read: if isAuthenticated();
      allow create: if hasRole('CLINIC');
      allow update: if hasRole('CLINIC') && 
                       resource.data.clinicId == request.auth.uid;
      allow delete: if false;
    }
    
    // Academy programs
    match /academyPrograms/{programId} {
      allow read: if isAuthenticated();
      allow create: if hasRole('ACADEMY');
      allow update: if hasRole('ACADEMY') && 
                       resource.data.academyId == request.auth.uid;
      allow delete: if false;
    }
    
    // Bookings
    match /bookings/{bookingId} {
      // Users can read their own bookings or provider bookings
      allow read: if isAuthenticated() && 
                     (resource.data.playerId == request.auth.uid || 
                      resource.data.parentId == request.auth.uid ||
                      resource.data.providerId == request.auth.uid ||
                      isAdmin());
      // Users can create bookings
      allow create: if isAuthenticated() && 
                       (request.resource.data.playerId == request.auth.uid ||
                        request.resource.data.parentId == request.auth.uid);
      // Users can update their own bookings, providers can update status
      allow update: if isAuthenticated() && 
                       (resource.data.playerId == request.auth.uid ||
                        resource.data.parentId == request.auth.uid ||
                        resource.data.providerId == request.auth.uid ||
                        isAdmin());
      allow delete: if false;
    }
    
    // Notifications (in-app: each user sees their own; create only with createdBy = caller)
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                       request.resource.data.createdBy == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if false;
    }
    
    // Posts
    match /posts/{postId} {
      // Helper function to get allowed visibleToRoles for an ownerRole
      function getAllowedVisibleToRoles(ownerRole) {
        return ownerRole == 'player' ? ['player', 'agent', 'academy', 'clinic', 'parent'] :
               ownerRole == 'agent' ? ['agent', 'academy', 'clinic'] :
               ownerRole == 'academy' ? ['academy', 'clinic', 'parent'] :
               ownerRole == 'clinic' ? ['clinic'] :
               ownerRole == 'parent' ? ['parent'] :
               ['player', 'agent', 'academy', 'clinic', 'parent']; // default
      }
      
      // Read: Authenticated users can read active posts
      // Note: Role-based filtering is handled in queries using array-contains
      // This rule ensures only active posts are readable (unless you're the owner)
      allow read: if isAuthenticated() && (
        // Owner can always read their own posts (even if deleted)
        resource.data.ownerId == request.auth.uid ||
        // Others can only read active posts (status == 'active' or status field missing for backward compatibility)
        (resource.data.status == 'active' || !resource.data.status)
      );
      
      // Create: Must be authenticated, ownerId must match auth uid, ownerRole/visibleToRoles must be valid, and user must not be suspended
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerId == request.auth.uid &&
                       request.resource.data.ownerRole != null &&
                       request.resource.data.visibleToRoles != null &&
                       request.resource.data.visibleToRoles == getAllowedVisibleToRoles(request.resource.data.ownerRole) &&
                       (request.resource.data.status == 'active' || request.resource.data.status == null) &&
                       // Check if user is suspended
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuspended != true;
      
      // Update: Owner can update (content, or soft-delete), OR admin can set status to 'deleted'
      allow update: if isAuthenticated() && (
                       // Owner can update (but not change ownerId or ownerRole)
                       (resource.data.ownerId == request.auth.uid &&
                        request.resource.data.ownerId == resource.data.ownerId &&
                        request.resource.data.ownerRole == resource.data.ownerRole) ||
                       // Admin can set status to 'deleted' for moderation
                       (isAdmin() && 
                        request.resource.data.status == 'deleted' &&
                        'deletedAt' in request.resource.data &&
                        'deletedBy' in request.resource.data)
                     );
      
      // Delete: Only owner can delete (by setting status to 'deleted')
      allow delete: if isAuthenticated() && 
                       resource.data.ownerId == request.auth.uid;
    }
    
    // Media
    match /media/{mediaId} {
      // Allow reading public/unlisted media to authenticated users
      allow read: if isAuthenticated() && 
                     (resource.data.visibility == 'public' || 
                      resource.data.visibility == 'unlisted' ||
                      resource.data.ownerId == request.auth.uid);
      // Allow creating media with ownerId matching auth uid
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerId == request.auth.uid;
      // Allow updating only by owner (limited fields)
      allow update: if isAuthenticated() && 
                       resource.data.ownerId == request.auth.uid;
      // Allow deleting only by owner
      allow delete: if isAuthenticated() && 
                       resource.data.ownerId == request.auth.uid;
    }
    
    // Reports collection
    match /reports/{reportId} {
      // Create: Authenticated users can create reports (reporterId must match auth uid)
      allow create: if isAuthenticated() && 
                       request.resource.data.reporterId == request.auth.uid &&
                       request.resource.data.targetType in ['post', 'user'] &&
                       request.resource.data.reason in ['spam', 'harassment', 'nudity', 'violence', 'fake', 'other'] &&
                       request.resource.data.status == 'open';
      
      // Read: Users can read only their own reports, admins can read all
      allow read: if isAuthenticated() && 
                     (resource.data.reporterId == request.auth.uid || isAdmin());
      
      // Update: Only admin can update status/resolution
      allow update: if isAdmin() && 
                       // Ensure status is valid
                       (request.resource.data.status == null || 
                        request.resource.data.status in ['open', 'reviewed', 'resolved']);
      
      allow delete: if false; // Reports cannot be deleted
    }

    // Check-in codes collection (for uniqueness tracking)
    match /checkInCodes/{code} {
      // Create: Only if document doesn't exist and uid matches auth uid
      allow create: if isAuthenticated() && 
                       request.resource.data.uid == request.auth.uid &&
                       !exists(/databases/$(database)/documents/checkInCodes/$(code));
      
      // Read: Users can read their own code reservation, admins can read all
      allow read: if isAuthenticated() && 
                     (resource.data.uid == request.auth.uid || isAdmin());
      
      // Update/Delete: Not allowed (codes are permanent)
      allow update: if false;
      allow delete: if false;
    }

    // Check-ins collection
    match /checkins/{checkinId} {
      // Create: Only academy/clinic users can create check-ins
      allow create: if isAuthenticated() && 
                       (getUserRole() == 'academy' || getUserRole() == 'clinic') &&
                       request.resource.data.createdBy == request.auth.uid &&
                       request.resource.data.locationId == request.auth.uid &&
                       request.resource.data.locationRole in ['academy', 'clinic'] &&
                       request.resource.data.userRole in ['player', 'parent'];
      
      // Read: Admin can read all, users can read their own check-ins
      allow read: if isAuthenticated() && 
                     (isAdmin() || resource.data.userId == request.auth.uid);
      
      // Update/Delete: Not allowed (check-ins are immutable)
      allow update: if false;
      allow delete: if false;
    }

    // Settings (Admin settings like commission rate)
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Admin can read all collections
    match /{document=**} {
      allow read: if isAdmin();
    }
  }
}

